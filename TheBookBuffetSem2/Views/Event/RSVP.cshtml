@model TheBookBuffetSem2.Models.RSVPViewModel

<section id="rsvp" class="pt-5 pb-5 bg-dark text-light">
    <div class="container">
        <h2 class="text-center mb-4">RSVP for @Model.EventTitle</h2>

        <p>Dear @Model.InviteeName,</p>
        <p>Consider our invitation to attend the book launch of '@Model.EventTitle'. Please confirm your attendance below.</p>

        @using (Html.BeginForm("RSVP", "Event", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Token)

            <div class="form-group">
                <label class="text-light">Indicate attendance</label><br />
                @Html.RadioButtonFor(m => m.RSVPStatus, true) Attending<br />
                @*@Html.RadioButtonFor(m => m.RSVPStatus, false) No*@
            </div>

            if (Model.InviteeType == "Author")
            {
                <div class="form-group">
                    <label class="text-light">Would you like to speak at the event? (5 minutes max)</label><br />
                    @Html.RadioButtonFor(m => m.WillingToSpeak, true) Yes<br />
                    @Html.RadioButtonFor(m => m.WillingToSpeak, false) No
                </div>
            }

            <button type="submit" class="btn btn-primary">Submit RSVP</button>
        }
    </div>
</section>

@section Styles {
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        .form-control {
            background-color: #343a40;
            color: #ecf0f1;
            border: 1px solid #495057;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            width: 100%;
        }

        label {
            font-weight: bold;
        }
    </style>
}
