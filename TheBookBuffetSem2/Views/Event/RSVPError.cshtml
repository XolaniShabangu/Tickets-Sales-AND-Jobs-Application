@{
    ViewBag.Title = "RSVP Error";
}

<section id="rsvp-error" class="pt-5 pb-5 bg-dark text-light">
    <div class="container text-center">
        <h2 class="mb-4">RSVP Error</h2>
        <p>@TempData["ErrorMessage"]</p>
        <p>If you believe this is a mistake, please <a href="@Url.Action("Contact", "Home")" class="text-light">contact us</a>.</p>
    </div>
</section>

@section Styles {
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
        }

        .container {
            max-width: 600px;
            margin: auto;
        }

        a {
            color: #ffc107; /* Gold color for links */
            text-decoration: underline;
        }

            a:hover {
                color: #ffd700; /* Lighter gold on hover */
            }

        h2 {
            font-size: 36px;
            font-weight: bold;
        }

        p {
            font-size: 18px;
            line-height: 1.6;
        }
    </style>
}
