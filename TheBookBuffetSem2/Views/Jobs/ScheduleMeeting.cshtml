@model TheBookBuffetSem2.Models.Careers.MeetingModel

@{
    ViewBag.Title = "Schedule a New Meeting";
}

<h2>Schedule a New Meeting</h2>

@using (Html.BeginForm("ScheduleMeeting", "Jobs", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Summary, "Meeting Title")
        @Html.TextBoxFor(m => m.Summary, new { @class = "form-control", placeholder = "Enter the meeting title" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description, "Meeting Description")
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4, placeholder = "Enter the meeting description" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.StartTime, "Start Time")
        @Html.TextBoxFor(m => m.StartTime, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EndTime, "End Time")
        @Html.TextBoxFor(m => m.EndTime, new { @class = "form-control", type = "datetime-local" })
    </div>

    <button type="submit" class="btn btn-primary">Schedule Meeting</button>
}
