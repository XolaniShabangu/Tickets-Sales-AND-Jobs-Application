@{
    ViewBag.Title = "Thank You for Your Purchase!";
    var ticketImagePath = TempData["TicketImagePath"] as string;
    var successMessage = TempData["SuccessMessage"] as string;
}

<section id="thank-you" class="pt-5 pb-5 bg-dark text-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <div class="celebration-banner">
                    <h2>@ViewBag.Title</h2>
                </div>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <p class="alert alert-success mt-4">@successMessage</p>
                }

                <p>We appreciate your purchase. Your ticket details are below, And An email has been sent with the ticket::</p>

                @if (!string.IsNullOrEmpty(ticketImagePath))
                {
                    <div class="ticket-preview mt-4">
                        <h4>Your Ticket:</h4>
                        <img src="@ticketImagePath" alt="Your Ticket" class="img-fluid" />
                    </div>
                }
                else
                {
                    <p class="alert alert-danger">Oops! There was an error generating your ticket. Please contact support.</p>
                }

                <a href="@Url.Action("UpcomingEvents", "Event")" class="btn btn-primary mt-4">Back to Events</a>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        body {
            background-color: #2c3e50;
            color: #ecf0f1;
        }

        .celebration-banner {
            background-color: #28a745;
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            animation: fadeIn 1s ease-in-out, bounce 1.5s infinite;
        }

        .ticket-preview img {
            border: 1px solid #ddd;
            border-radius: 4px;
            padding: 5px;
            max-width: 100%;
            height: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .alert-success {
            background-color: #28a745;
            border: none;
            color: white;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
    </style>
}
