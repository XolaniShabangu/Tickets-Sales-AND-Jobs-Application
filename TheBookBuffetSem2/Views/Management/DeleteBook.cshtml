@model TheBookBuffetSem2.Models.Book

@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>

<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.Title</dd>

        <dt>Price</dt>
        <dd>@Model.Price.ToString("C")</dd>

        <dt>Author</dt>
        <dd>@Model.Author?.Name</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" /> |
@Html.ActionLink("Cancel", "IndexBooks", null, new { @class = "btn btn-secondary" })
    }
</div>
