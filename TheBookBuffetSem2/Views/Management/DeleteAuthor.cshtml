@model TheBookBuffetSem2.Models.Author

@{
    ViewBag.Title = "Delete Author";
}

<h2>Delete Author</h2>

<h3>Are you sure you want to delete this author?</h3>
<div>
    <h4>Author</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" /> |
@Html.ActionLink("Cancel", "IndexAuthors", null, new { @class = "btn btn-secondary" })
    }
</div>
