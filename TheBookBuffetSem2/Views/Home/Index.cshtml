@model IEnumerable<TheBookBuffetSem2.Models.Careers.Job>

@{
    ViewBag.Title = "Welcome to The Book Buffet";
}

<section id="hero" class="hero-section text-center text-light">
    <div class="container">
        <h1 class="display-4 text-dark">Welcome to The Book Buffet</h1> <!-- Changed to dark text for visibility -->
        <p class="lead text-dark">Your one-stop shop for all things books! Browse our collection, discover new reads, and apply for exciting job opportunities.</p> <!-- Changed to dark text for visibility -->
        <a href="#" class="btn btn-primary btn-lg mt-4">Shop Now</a>
    </div>
</section>

<!-- Hiring Section -->
<section id="jobs" class="pt-5 pb-5 text-center hiring-section">
    <div class="container">
        <h2 class="text-center mb-4">🚀 We're Hiring!</h2>

        <div id="jobsCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @if (Model != null && Model.Any())
                {
                    var jobsList = Model.Where(j => j.Published).ToList();
                    for (int i = 0; i < jobsList.Count; i++)
                    {
                        var job = jobsList[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="job-card card text-white bg-gradient-primary p-4">
                                <h5>@job.Title</h5>
                                <p>Exciting opportunities await!</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <div class="job-card card text-white bg-secondary p-4">
                            <h5>Join Our Team!</h5>
                            <p>We have exciting job opportunities for you!</p>
                        </div>
                    </div>
                }
            </div>

            <!-- Carousel Controls -->
            <a class="carousel-control-prev" href="#jobsCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#jobsCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Call to Action -->
        <div class="mt-4">
            <a href="@Url.Action("AccessJobs", "Jobs")" class="btn btn-primary btn-lg">See All Open Positions</a>
        </div>
    </div>
</section>

<!-- Featured Books Section -->
<section id="featured-books" class="pt-5 pb-5">
    <div class="container">
        @*<h2 class="text-center mb-4">Featured Books</h2>*@
        <div class="row">
            <!-- Featured books placeholder -->
            <!--<div class="col-md-3">
                <div class="card">
